<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <!-- style for the button background panel -->
    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <style id="custom-button#panel">
        <attributes paddingLeft="7px" paddingRight="7px"
                    width="150px" height="40px" childLayout="center"
                    visibleToMouse="true" backgroundColor="#fff2" />
        <effect>
            <onActive name="border" color="#ffff" post="true" border="1px" />
            <onHover name="border" color="#ffff" post="true" border="3px" />
            <!--<onHover name="colorPulsate" startColor="#ffff" endColor="#fff3" period="500"/>-->
        </effect>
    </style>

    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <!-- style for the button text -->
    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <style id="custom-button#text" base="custom-button-font">
        <attributes align="center" valign="center" textHAlign="center" textVAlign="center" visibleToMouse="false"/>
        <effect>
            <onEnabled name="textColorAnimated" startColor="#8886" endColor="#eeef" post="false" length="150" />
            <onDisabled name="textColorAnimated" startColor="#eeef" endColor="#8886" post="false" length="150" />
        </effect>
    </style>
    
    <style id="custom-button-font">
        <attributes font="Interface/Fonts/UnispaceSmall.fnt"/>
    </style>
</nifty-styles>
