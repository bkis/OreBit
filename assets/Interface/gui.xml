<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    <useStyles filename="Interface/Button/custom-button.xml" />
    
    <screen id="start" controller="de.kritzelbit.orebit.gui.GUIController">
        <layer childLayout="center">
            <image filename="Textures/Backgrounds/space.jpg" width="100%" height="100%"/>
        </layer>
        <layer childLayout="vertical">
            <panel height="30%" width="100%" childLayout="center">
                <text text="OreBit" font="Interface/Fonts/Astron.fnt" width="100%" height="100%" wrap="false"/>
            </panel>
            <panel height="70%" width="100%" childLayout="vertical">
                <control name="button" id="buttonContinueGame" style="custom-button" label="Continue Game" align="center" valign="center" width="200px" height="50px" visibleToMouse="true"> 
                    <interact onRelease="startGame(continue)" />
                </control>
                <control name="label"
                    id="labelButtonContinueGame"
                    text="sdgsdg"
                    height="30px"
                    width="100%"
                    align="center"
                    color="#0f0f"
                    font="Interface/Fonts/UnispaceSmaller.fnt" />
                <panel width="100%" height="20px"></panel>
                <control name="button" id="buttonNewGame" style="custom-button" label="New Game" align="center" valign="center" width="200px" height="50px" visibleToMouse="true"> 
                    <interact onRelease="startGame(new)" />
                </control>
                <control name="label"
                    id="labelButtonNewGame"
                    text="sdgsdg"
                    height="30px"
                    width="100%"
                    align="center"
                    color="#f00f"
                    font="Interface/Fonts/UnispaceSmaller.fnt" />
            </panel>
        </layer>
    </screen> 
    
    <screen id="shop" controller="de.kritzelbit.orebit.gui.GUIController">
        <layer childLayout="center">
            <image filename="Textures/Backgrounds/space.jpg" width="100%" height="100%"/>
        </layer>
        <layer childLayout="vertical">
            <panel height="100%" width="200px" childLayout="vertical" visibleToMouse="true">
                
            </panel>
        </layer>
    </screen>
    
    <screen id="ingame" controller="de.kritzelbit.orebit.gui.GUIController">
        <layer childLayout="vertical">
            <panel width="100%"></panel>
            <panel height="105px" width="100%" childLayout="vertical">
                <panel height="60px" width="100%" childLayout="horizontal">
                    <panel height="60px" width="120px" childLayout="vertical">
                        <panel height="10px" width="120"></panel>
                        <panel height="20px" width="120" childLayout="horizontal">
                            <control name="label"
                                     id="labelSpeed"
                                     text="Speed"
                                     height="100%"
                                     width="100px"
                                     align="left"
                                     font="Interface/Fonts/UnispaceSmall.fnt" />
                            <image filename="Interface/speed.png" height="20px" width="20px"/>
                        </panel>
                        <panel height="5px" width="120"></panel>
                        <panel height="20px" width="120" childLayout="horizontal">
                            <control name="label"
                                     id="labelMoney"
                                     text="Money"
                                     height="100%"
                                     width="100px"
                                     align="left"
                                     font="Interface/Fonts/UnispaceSmall.fnt" />
                            <image filename="Interface/money.png" height="20px" width="20px"/>
                        </panel>
                        <panel height="5px" width="120"></panel>
                    </panel>
                    <panel height="60px" childLayout="vertical">
                        <panel height="30px" width="100%" childLayout="center">
                            <control name="label"
                                         id="labelLine1"
                                         text=""
                                         height="100%"
                                         width="100%"
                                         align="left"
                                         font="Interface/Fonts/Unispace.fnt" />
                        </panel>
                        <panel height="30px" width="100%" childLayout="center">
                            <control name="label"
                                         id="labelLine2"
                                         text=""
                                         height="100%"
                                         width="100%"
                                         align="left"
                                         font="Interface/Fonts/Unispace.fnt" />
                        </panel>
                    </panel>
                </panel>
                <panel height="20px" width="100%" childLayout="horizontal">
                    <control name="label"
                                     id="labelFuel"
                                     text="1000"
                                     height="100%"
                                     width="100px"
                                     align="left"
                                     font="Interface/Fonts/UnispaceSmall.fnt" />
                    <image filename="Interface/fuel.png" height="20px" width="20px"/>
                    <panel height="100%" width="10px"></panel>
                    <panel height="100%" childLayout="vertical">
                        <panel id="panelFuelStatus" height="100%" width="100%" backgroundColor="#fff6" childLayout="vertical"></panel>
                    </panel>
                </panel>
                <panel height="5px" width="100%"></panel>
                <panel height="20px" width="100%" childLayout="horizontal">
                    <control name="label"
                                 id="labelTime"
                                 text="0:36"
                                 height="100%"
                                 width="100px"
                                 align="left"
                                 font="Interface/Fonts/UnispaceSmall.fnt" />
                    <image filename="Interface/time.png" height="20px" width="20px"/>
                    <panel height="100%" width="10px"></panel>
                    <panel height="100%" childLayout="vertical">
                        <panel id="panelTimeStatus" height="100%" width="100%" backgroundColor="#fff6" childLayout="vertical"></panel>
                    </panel>
                </panel>
            </panel>
        </layer>
    </screen> 
    
</nifty>
