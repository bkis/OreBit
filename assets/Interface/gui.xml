<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    
    <screen id="start" controller="de.kritzelbit.orebit.gui.GUIController">
        <layer backgroundColor="#0000" childLayout="vertical">
            <panel height="100%" width="200px" backgroundColor="#222f" childLayout="vertical" visibleToMouse="true">
                
            </panel>
        </layer>
    </screen> 
    
    <screen id="ingame" controller="de.kritzelbit.orebit.gui.GUIController">
        <layer childLayout="vertical">
            <panel width="100%"></panel>
            <panel height="100px" width="100%" childLayout="vertical">
                <panel height="50px" width="100%" childLayout="center">
                    <control name="label"
                                 id="labelObjective"
                                 text="0:36"
                                 height="100%"
                                 width="100%"
                                 align="left"
                                 font="Interface/Fonts/Unispace.fnt" />
                </panel>
                <panel height="25px" width="100%" childLayout="horizontal">
                    <control name="label"
                                 id="labelTime"
                                 text="0:36"
                                 height="100%"
                                 width="100px"
                                 align="left"
                                 font="Interface/Fonts/Unispace.fnt" />
                    <panel height="100%" childLayout="vertical">
                        <panel id="panelTimeStatus" height="100%" width="100%" backgroundColor="#55f5" childLayout="vertical"></panel>
                    </panel>
                </panel>
                <panel height="25px" width="100%" childLayout="horizontal">
                    <control name="label"
                                     id="labelFuel"
                                     text="1000"
                                     height="100%"
                                     width="100px"
                                     align="left"
                                     font="Interface/Fonts/Unispace.fnt" />
                    <panel height="100%" childLayout="vertical">
                        <panel id="panelFuelStatus" height="100%" width="100%" backgroundColor="#ff05" childLayout="vertical"></panel>
                    </panel>
                </panel>
            </panel>
        </layer>
    </screen> 
    
</nifty>
