<mission title="Project Gem"
         desc="Collect the gem from the moon and bring it home to the base!"
         timelimit="30"
         fuellimit="0" >
    
    <ship
        fuel="1000"
        thrust="10" />
    
    <base
        planet="earth"
        position="9" />
    
    <planets>
        <planet
            name="earth"
            radius="15"
            mass="7"
            x="5"
            y="5"
            texture="tex_earth.jpg" />
        <planet
            name="moon"
            radius="4"
            mass="1"
            x="8"
            y="12"
            texture="tex_moon.jpg" />
    </planets>
    
    <objectives>
        <collect
            item="gem"
            target="base" />
    </objectives>
    
    <objects>
        <collectable
            name="gem"
            x="9"
            y="14" />
        <passive
            radius="1"
            x=""
            y=""
            vx=""
            vy="" />
    </objects>
</mission>